<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/title_sns_code_forgot_password"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="40dp">

        <com.infideap.blockedittext.BlockEditText
            android:id="@+id/blockEditTextAuthPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:bet_defaultLength="1"
            app:bet_hint="Mã xác nhận qua tin nhắn"
            app:bet_hintTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:bet_inputType="Integer"
            app:bet_numberOfBlock="6"
            app:bet_textSize="14sp" />

        <TextView
            android:id="@+id/tvWrongSMSCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text="Mã xác nhận không chính xác"
            android:textColor="@color/red"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/btnShowFormInputNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_login_background"
            android:gravity="center"
            android:padding="10dp"
            android:text="Tiếp tục"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/btnReSendSmsCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text="Gửi lại mã"
            android:textColor="@color/white"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>