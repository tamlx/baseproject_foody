<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rLayoutItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/rowBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/delete"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="?android:selectableItemBackground"
                android:gravity="center_vertical|left"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="XÃ³a"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowFG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:visibility="visible"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp15"
            android:id="@+id/layoutItemCart"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="111dp"
                    android:src="@drawable/app_logo"
                    android:layout_height="111dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginVertical="@dimen/dp5"
                    android:layout_marginHorizontal="@dimen/dp10"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/nameProduct"
                        android:textStyle="bold"
                        android:textColor="@color/background_main"
                        tools:text="name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/priceProduct"
                        android:textColor="@color/black"
                        android:layout_marginHorizontal="@dimen/dp10"
                        android:gravity="right"
                        tools:text="priceProduct"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_minus"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_minus" />
                            <TextView
                                android:id="@+id/quantity_product"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textColor="@color/text_price"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                tools:text="1"
                                android:layout_height="match_parent"/>
                            <ImageView
                                android:id="@+id/image_plus"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_plus" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>